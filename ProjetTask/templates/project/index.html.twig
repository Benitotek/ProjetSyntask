                        </div>
                        <!-- Statistiques rapides avec animation -->
                        <div class="stats-cards">
                            <div class="stat-card" data-stat="total">
                                <div class="stat-icon">
                                    üìä
                                </div>
                                <div class="stat-content">
                                    <div class="stat-number" id="statTotal">
                                        {{ projects|length }}
                                    </div>
                                    <div class="stat-label">
                                        Total projets
                                    </div>
                                </div>
                            </div>
                            <div class="stat-card" data-stat="EN_COURS">
                                <div class="stat-icon">
                                    üöÄ
                                </div>
                                <div class="stat-content">
                                    <div class="stat-number" id="statEnCours">
                                        {{ projects|filter(p => p.statut == 'EN_COURS')|length }}
                                    </div>
                                    <div class="stat-label">
                                        En Cours
                                    </div>
                                </div>
                            </div>
                            <div class="stat-card" data-stat="TERMINER">
                                <div class="stat-icon">
                                    ‚úÖ
                                </div>
                                <div class="stat-content">
                                    <div class="stat-number" id="statTERMINER">
                                        {{ projects|filter(p => p.statut == 'TERMINER')|length }}
                                    </div>
                                    <div class="stat-label">
                                        Termin√©s
                                    </div>
                                </div>
                            </div>
                            <div class="stat-card" data-stat="EN_ATTENTE">
                                <div class="stat-icon">
                                    ‚è≥
                                </div>
                                <div class="stat-content">
                                    <div class="stat-number" id="statEnAttente">
                                        {{ projects|filter(p => p.statut == 'EN_ATTENTE')|length }}
                                    </div>
                                    <div class="stat-label">
                                        En Attente
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Filtres et recherche am√©lior√©s -->
                        <div class="filters-section">
                            <div class="search-filters">
                                <div class="search-box">
                                    <input type="text" id="projectSearch" placeholder="Rechercher un projet..." class="search-input" />
                                    <i class="icon-search"></i>
                                    <button id="clearSearch" class="btn-clear-search" style="display: none;">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                                <div class="filter-tabs">
                                    <a href="#" class="filter-tab active" data-status="all">
                                        Tous (
                                        <span id="countAll">
                                            {{ projects|length }}
                                        </span>
                                        )
                                    </a>
                                    <a href="#" class="filter-tab" data-status="EN_ATTENTE">
                                        En attente (
                                        <span id="countEnAttente">
                                            {{ projects|filter(p => p.statut == 'EN_ATTENTE')|length }}
                                        </span>
                                        )
                                    </a>
                                    <a href="#" class="filter-tab" data-status="EN_COURS">
                                        En cours (
                                        <span id="countEnCours">
                                            {{ projects|filter(p => p.statut == 'EN_COURS')|length }}
                                        </span>
                                        )
                                    </a>
                                    <a href="#" class="filter-tab" data-status="TERMINER">
                                        Termin√©s (
                                        <span id="countTERMINER">
                                            {{ projects|filter(p => p.statut == 'TERMINER')|length }}
                                        </span>
                                        )
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!-- Tableau des projets -->
                        <div class="projects-table-container">
                            <table class="projects-table">
                                <thead>
                                    <tr>
                                        <th>
                                            <button class="sort-header" data-sort="name">
                                                Projet
                                                <i class="fas fa-sort"></i>
                                            </button>
                                        </th>
                                        <th>
                                            <button class="sort-header" data-sort="status">
                                                Statut
                                                <i class="fas fa-sort"></i>
                                            </button>
                                        </th>
                                        <th>
                                            Chef de projet
                                        </th>
                                        <th>
                                            √âquipe
                                        </th>
                                        <th>
                                            <button class="sort-header" data-sort="progress">
                                                Progression
                                                <i class="fas fa-sort"></i>
                                            </button>
                                        </th>
                                        <th>
                                            <button class="sort-header" data-sort="deadline">
                                                √âch√©ance
                                                <i class="fas fa-sort"></i>
                                            </button>
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="projectsTableBody">
                                    {% for project in projects %}
                                        <tr class="project-row" data-project-id="{{ project.id }}" data-status="{{ project.statut }}" data-name="{{ project.titre|lower }}">
                                            <td class="project-cell">
                                                <div class="project-info">
                                                    <h4 class="project-name">
                                                        {{ project.titre }}
                                                    </h4>
                                                    {% if project.reference %}
                                                        <span class="project-ref">
                                                            {{ project.reference }}
                                                        </span>
                                                    {% endif %}
                                                </div>
                                            </td>
                                            <td>
                                                <span class="statut-badge statut-{{ project.statut|lower|replace({'-': '_'}) }}" data-project-id="{{ project.id }}" data-current-status="{{ project.statut }}" title="Cliquer pour changer le statut">
                                                    {{ project.statut|replace({'-': ' '})|title }}
                                                </span>
                                            </td>
                                            <td>
                                                {% if project.Chefproject %}
                                                    <div class="user-info-cell">
                                                        <div class="user-avatar">
                                                            {{ project.Chefproject.username|slice(0, 2)|upper }}
                                                        </div>
                                                        {{ project.Chefproject.username }}
                                                    </div>
                                                {% else %}
                                                    <span class="text-muted">
                                                        Non assign√©
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="team-avatars-small">
                                                    {% for membre in project.membres|slice(0, 3) %}
                                                        <div class="team-avatar-small" title="{{ membre.username }}">
                                                            {{ membre.username|slice(0, 2)|upper }}
                                                        </div>
                                                    {% endfor %}
                                                    {% if project.membres|length > 3 %}
                                                        <span class="team-count">
                                                            +
                                                            {{ project.membres|length - 3 }}
                                                        </span>
                                                    {% endif %}
                                                </div>
                                            </td>
                                            <td>
                                                {% if project.tasks is defined and project.tasks|length > 0 %}
                                                    {% set totalTasks = project.tasks|length %}
                                                    {% set completedTasks = project.tasks|filter(t => t.statut == 'TERMINER')|length %}
                                                    {% set progressPercent = totalTasks > 0 ? (completedTasks / totalTasks * 100)|round : 0 %}
                                                    <div class="progress-cell">
                                                        <div class="progress-bar-small">
                                                            <div class="progress-fill-small" style="width: {{ progressPercent }}%" data-progress="{{ progressPercent }}"></div>
                                                        </div>
                                                        <span class="progress-text-small">
                                                            {{ progressPercent }}
                                                            %
                                                        </span>
                                                    </div>
                                                {% else %}
                                                    <span class="text-muted">
                                                        Aucune t√¢che
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if project.dateButoir %}
                                                    <div class="date-cell" data-deadline="{{ project.dateButoir|date('Y-m-d') }}">
                                                        {{ project.dateButoir|date('d/m/Y') }}
                                                        {% if project.dateButoir < date() and project.statut != 'TERMINER' %}
                                                            <span class="overdue-badge">
                                                                En retard
                                                            </span>
                                                        {% endif %}
                                                    </div>
                                                {% else %}
                                                    <span class="text-muted">
                                                        Non d√©finie
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <a href="{{ path('app_project_kanban', {'id': project.id}) }}" class="btn-icon" title="Vue Kanban" data-action="kanban">
                                                        <i class="icon-kanban"></i>
                                                    </a>
                                                    <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn-icon" title="Voir d√©tails" data-action="view">
                                                        <i class="icon-eye"></i>
                                                    </a>
                                                    {% if is_granted('ROLE_DIRECTEUR') or project.Chefproject == app.user %}
                                                        <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn-icon" title="Modifier" data-action="edit">
                                                            <i class="fas fa-pencil-alt"></i>
                                                        <!-- ic√¥ne de crayon -->
                                                        </a>
                                                        <button class="btn-icon btn-delete-project" title="Supprimer" data-project-id="{{ project.id }}" data-project-name="{{ project.titre }}">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    {% endif %}
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr id="emptyRow">
                                            <td colspan="7" class="empty-table">
                                                <div class="empty-state">
                                                    <div class="empty-icon">
                                                        üìÅ
                                                    </div>
                                                    <h3>
                                                        Aucun projet trouv√©
                                                    </h3>
                                                    <p id="emptyMessage">
                                                        Aucun projet ne correspond aux crit√®res s√©lectionn√©s.
                                                    </p>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </main>
                </div>
                <!-- Modal de confirmation de suppression -->
                <div class="modal fade" id="deleteProjectModal" tabindex="-1" aria-labelledby="deleteProjectModalLabel" aria-hidden="true">
                    <div class="modal-dialog confirmation-modal">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteProjectModalLabel">
