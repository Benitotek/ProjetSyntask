{# templates/project/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des projets - SYNTASK{% endblock %}

{% block body %}
<div class="dashboard-container">
    <div class="row">
        <div class="col-12 dashboard-header">
            <h1>
                <i class="fas fa-project-diagram"></i>
                Liste des projets
            </h1>
            <p class="text-muted">Gérez vos projets</p>
        </div>
    </div>
    
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card content-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>
                        <i class="fas fa-list"></i>
                        Projets
                    </h5>
                    {% if is_granted('ROLE_CHEF_PROJET') or is_granted('ROLE_DIRECTEUR') or is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_project_new') }}" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus"></i> Nouveau projet
                    </a>
                    {% endif %}
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Référence</th>
                                    <th>Statut</th>
                                    <th>Chef de projet</th>
                                    <th>Progression</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if projects is empty %}
                                    <tr>
                                        <td colspan="6" class="text-center">Aucun projet disponible.</td>
                                    </tr>
                                {% else %}
                                    {% for project in projects %}
                                        <tr>
                                            <td>{{ project.titre }}</td>
                                            <td>
                                                {% if project.reference is defined and project.reference is not null %}
                                                    {{ project.reference }}
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge bg-{{ project.statut == 'EN-COURS' ? 'success' : (project.statut == 'TERMINE' ? 'primary' : 'warning') }}">
                                                    {{ project.statut }}
                                                </span>
                                            </td>
                                            <td>{{ project.chefDeProjet ? project.chefDeProjet.fullName : 'Non assigné' }}</td>
                                            <td>
                                                <div class="progress">
                                                    <div class="progress-bar" style="width: {{ project.progress ?? 0 }}%">{{ (project.progress ?? 0)|round }}%</div>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('app_project_kanban', {'id': project.id}) }}" class="btn btn-sm btn-outline-success">
                                                    <i class="fas fa-columns"></i>
                                                </a>
                                                {% if is_granted('ROLE_CHEF_PROJET') or is_granted('ROLE_DIRECTEUR') or is_granted('ROLE_ADMIN') %}
                                                <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}