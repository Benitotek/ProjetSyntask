                                            Nouveau statut :
                                        </label>
                                        <select class="form-select" id="newStatus" name="newStatus">
                                            <option value="EN_ATTENTE">
                                                En attente
                                            </option>
                                            <option value="EN_COURS">
                                                En cours
                                            </option>
                                            <option value="TERMINER">
                                                Termin√©
                                            </option>
                                            <option value="ARRETERR">
                                                Arr√™t√©
                                            </option>
                                        </select>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    ANNULER
                                </button>
                                <button type="button" class="btn btn-primary" id="confirmChangeStatus">
                                    Confirmer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Container pour les toasts -->
                <div class="toast-container" id="toastContainer"></div>
            {% endblock %}
            {% block javascripts %}
                {{ parent() }}
                <script>
        // Variables globales
        let currentFilter = 'all';
        let currentSort = { field: null, direction: 'asc' };
        let projectToDelete = null;
        let projectToChangeStatus = null;

        document.addEventListener('DOMContentLoaded', function() {
            initProjectManagement();
        });

        /**
         * Initialise toutes les fonctionnalit√©s de gestion des projets
         */
        function initProjectManagement() {
            initSearch();
            initFilters();
            initSorting();
            initStatusChange();
            initProjectDeletion();
            initRefreshButton();
            initTooltips();

            // Animer l'apparition des cartes statistiques
            animateStatsCards();
        }

        /**
         * Initialise la recherche en temps r√©el
         */
        function initSearch() {
            const searchInput = document.getElementById('projectSearch');
            const clearButton = document.getElementById('clearSearch');

            if (searchInput) {
                let searchTimeout;
                searchInput.addEventListener('input', function() {
                    clearTimeout(searchTimeout);
                    const query = this.value.toLowerCase().trim();

                    // Debounce pour √©viter trop de recherches
                    searchTimeout = setTimeout(() => {
                        filterProjects(query);
                        if (query) {
                            clearButton.style.display = 'block';
                            searchInput.classList.add('searching');
                        } else {
                            clearButton.style.display = 'none';
                            searchInput.classList.remove('searching');
                        }
                    }, 300);
                });
            }

            if (clearButton) {
                clearButton.addEventListener('click', function() {
                    searchInput.value = '';
                    searchInput.classList.remove('searching');
                    this.style.display = 'none';
                    filterProjects('');
                    searchInput.focus();
                });
            }
        }

        /**
         * Filtre les projets selon la requ√™te de recherche
         */
        function filterProjects(query = '') {
            const rows = document.querySelectorAll('.project-row');
            const emptyRow = document.getElementById('emptyRow');
            let visibleCount = 0;

            rows.forEach(row => {
                if (row.id === 'emptyRow') return;

                const projectName = row.dataset.name || '';
                const projectRef = row.querySelector('.project-ref')?.textContent.toLowerCase() || '';
                const chefName = row.querySelector('.user-info-cell')?.textContent.toLowerCase() || '';

                // Appliquer les filtres de statut et de recherche
                const statusMatch = currentFilter === 'all' || row.dataset.status === currentFilter;
                const searchMatch = !query || 
                    projectName.includes(query) || 
                    projectRef.includes(query) || 
                    chefName.includes(query);

                if (statusMatch && searchMatch) {
                    row.style.display = '';
                    row.classList.remove('hidden');
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                    row.classList.add('hidden');
                }
            });

            // Afficher/masquer la ligne vide
            if (emptyRow) {
                if (visibleCount === 0) {
                    emptyRow.style.display = '';
                    const message = query ? 
                        `Aucun projet ne correspond √† "${query}"` : 
                        'Aucun projet ne correspond aux crit√®res s√©lectionn√©s';
                    document.getElementById('emptyMessage').textContent = message;
                } else {
                    emptyRow.style.display = 'none';
                }
            }

            // Mettre √† jour les compteurs
            updateFilterCounts();
        }

        /**
         * Initialise les filtres de statut
         */
        function initFilters() {
            const filterTabs = document.querySelectorAll('.filter-tab');

            filterTabs.forEach(tab => {
                tab.addEventListener('click', function(e) {
                    e.preventDefault();
                    // Mettre √† jour l'√©tat actif
                    filterTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');

                    // Appliquer le filtre
                    currentFilter = this.dataset.status;
                    const searchQuery = document.getElementById('projectSearch').value.toLowerCase().trim();
                    filterProjects(searchQuery);
                });
            });
        }
    </script>
            {% endblock %}
            