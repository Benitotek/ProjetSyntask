<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}SYNTASK
			{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('favicon.ico') }}">
		<meta name="description" content="{% block meta_description %}Gestionnaire de tâches et de projets open-source.{% endblock %}">
		{% block stylesheets %}
			<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
			<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
			<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{# --- FAVICON ET ICÔNES --- #}
		<link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}">
		<link rel="icon" type="image/png" sizes="96x96" href="{{ asset('favicon-96x96.png') }}">
		<link rel="icon" type="image/png" sizes="192x192" href="{{ asset('android-chrome-192x192.png') }}">
		<link rel="icon" type="image/png" sizes="512x512" href="{{ asset('android-chrome-512x512.png') }}">
		<link rel="manifest" href="{{ asset('site.webmanifest') }}">
		<meta name="theme-color" content="#ffffff"> {% block extra_styles %}{% endblock %}

		{% block javascripts %}
			 <script	src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js" integrity="sha384-eeLEhtwdMwD3X9y+8P3Cn7Idl/M+w8H4uZqkgD/2eJVkWIN1yKzEj6XegJ9dL3q0" crossorigin="anonymous"></script>
			 <script src="{{ asset('js/notifications.js') }}"></script>
			 <script src="{{ asset('js/search.js') }}"></script>
			 <script src="{{ asset('js/dashboard.js') }}"></script>
			 <script src="{{ asset('js/main-dashboard.js') }}"></script>
			 <script src="{{ asset('js/kanban.js') }}"></script>
		{{ encore_entry_script_tags('app') }}
	{% endblock %}
	</head>

		<body class="dashboard-body"> {% block body %}
			{% if app.user %}
				{% include 'partials/_topbar.html.twig' %}

				<div class="dashboard-wrapper">
					{% include 'partials/_sidebar.html.twig' %}

					<div class="main-content">
						{% for label, messages in app.flashes %}
							{% for message in messages %}
								<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
									{{ message }}
									<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
								</div>
							{% endfor %}
						{% endfor %}

						{# Le contenu spécifique de la page sera inséré ici #}
						{% block content %}{% endblock %}
					</div>
				</div>
			{% else %}
				{# Affichage pour les utilisateurs non connectés #}
				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
							{{ message }}
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
						</div>
					{% endfor %}
				{% endfor %}

				{# Contenu pour les utilisateurs non connectés #}
				{% block unauthenticated_content %}{% endblock %}
			{% endif %}
		{% endblock %}
	</body>
</html>
