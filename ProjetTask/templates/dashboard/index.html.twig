    <!-- Script pour les notifications dynamiques -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const notificationBtn = document.querySelector('.notification-wrapper-right');
            if (notificationBtn) {
                notificationBtn.style.opacity = '0';
                notificationBtn.style.transform = 'translateX(100%)';
                
                setTimeout(() => {
                    notificationBtn.style.transition = 'all 0.5s ease-out';
                    notificationBtn.style.opacity = '1';
                    notificationBtn.style.transform = 'translateX(0)';
                }, 500);
            }

            function updateNotificationCount(count) {
                const badge = document.getElementById('notification-count');
                if (badge) {
                    badge.textContent = count;
                    badge.classList.add('notification-count-new');
                    setTimeout(() => {
                        badge.classList.remove('notification-count-new');
                    }, 600);
                }
            }

            const markAllReadBtn = document.querySelector('.notification-dropdown-header .btn');
            if (markAllReadBtn) {
                markAllReadBtn.addEventListener('click', function() {
                    const unreadItems = document.querySelectorAll('.notification-item.unread');
                    unreadItems.forEach(item => {
                        item.classList.remove('unread');
                    });
                    updateNotificationCount(0);
                });
            }
        });
    </script>
