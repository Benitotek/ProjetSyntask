{% extends 'base.html.twig' %}
{% block title %}BACK-OFFICE - SYNTASK
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {# Bootstrap 5 #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/styles/bootstrap.min.css" rel="stylesheet">
    {# FontAwesome (icônes) #}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/styles/all.min.css" rel="stylesheet">
    {# CSS personnalisé #}
    <link rel="stylesheet" href="{{ asset('styles/dashboard.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Bootstrap 5 (pour menus, éventuels éléments dynamiques) #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
{% block body %}
	<div class="container-fluid py-4">
		<h1 class="mb-4">MyDashboard</h1>

		{# STATISTIQUES SIMPLES #}
		<div class="row mb-4">
			<div class="col-md-4">
				<div class="card bg-primary text-white">
					<div class="card-body">
						<h5 class="card-title">Projets</h5>
						<h2 class="card-text">{{ stats.totalProjects }}</h2>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card bg-success text-white">
					<div class="card-body">
						<h5 class="card-title">Tâches</h5>
						<h2 class="card-text">{{ stats.totalTasks }}</h2>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card bg-info text-white">
					<div class="card-body">
						<h5 class="card-title">Utilisateurs</h5>
						<h2 class="card-text">{{ stats.totalUsers }}</h2>
					</div>
				</div>
			</div>
		</div>

		{# LISTE DES PROJETS #}
		<div class="card mb-4">
			<div class="card-header d-flex justify-content-between align-items-center">
				<h5 class="mb-0">Mes projets</h5>
				{% if is_granted('ROLE_CHEF_PROJET') or is_granted('ROLE_ADMIN') %}
					<a href="{{ path('project_new') }}" class="btn btn-sm btn-primary">
						<i class="fas fa-plus"></i>
						Nouveau projet
					</a>
				{% endif %}
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Nom</th>
								<th>Description</th>
								{% if projects|length > 0 and projects[0].startDate is defined %}
									<th>Date de début</th>
								{% endif %}
								{% if projects|length > 0 and projects[0].endDate is defined %}
									<th>Date de fin</th>
								{% endif %}
								{% if projects|length > 0 and projects[0].statut is defined %}
									<th>Statut</th>
								{% endif %}
								{% if projects|length > 0 and projects[0].priority is defined %}
									<th>Priorité</th>
								{% endif %}
								<th>Chef de projet</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for project in projects %}
								<tr>
									<td>{{ project.name }}</td>
									<td>
										{% if project.description is defined %}
											{{ project.description|slice(0, 50) }}
											{% if project.description|length > 50 %}...
											{% endif %}
										{% endif %}
									</td>
									{% if project.startDate is defined %}
										<td>{{ project.startDate ? project.startDate|date('d/m/Y') : 'N/A' }}</td>
									{% endif %}
									{% if project.endDate is defined %}
										<td>{{ project.endDate ? project.endDate|date('d/m/Y') : 'N/A' }}</td>
									{% endif %}
									{% if project.statut is defined %}
										<td>
											{% if project.statut == 'En cours' %}
												<span class="badge bg-primary">{{ project.statut }}</span>
											{% elseif project.statut == 'Terminé' %}
												<span class="badge bg-success">{{ project.statut }}</span>
											{% elseif project.statut == 'En pause' %}
												<span class="badge bg-warning">{{ project.statut }}</span>
											{% else %}
												<span class="badge bg-secondary">{{ project.statut }}</span>
											{% endif %}
										</td>
									{% endif %}
									{% if project.priority is defined %}
										<td>
											{% if project.priority == 'Basse' %}
												<span class="badge bg-success">{{ project.priority }}</span>
											{% elseif project.priority == 'Moyenne' %}
												<span class="badge bg-info">{{ project.priority }}</span>
											{% elseif project.priority == 'Haute' %}
												<span class="badge bg-warning">{{ project.priority }}</span>
											{% elseif project.priority == 'Urgente' %}
												<span class="badge bg-danger">{{ project.priority }}</span>
											{% endif %}
										</td>
									{% endif %}
									<td>
										{% if project.chefProjet is defined and project.chefProjet %}
											{% if project.chefProjet.firstName is defined and project.chefProjet.lastName is defined %}
												{{ project.chefProjet.firstName }}
												{{ project.chefProjet.lastName }}
											{% else %}
												{{ project.chefProjet }}
											{% endif %}
										{% else %}
											<span class="text-muted">Non assigné</span>
										{% endif %}
									</td>
									<td>
										<a href="{{ path('dashboard_project_details', {'id': project.id}) }}" class="btn btn-sm btn-info">
											<i class="fas fa-eye"></i>
										</a>
										{% if is_granted('ROLE_CHEF_PROJET') or is_granted('ROLE_ADMIN') %}
											<a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-sm btn-warning">
												<i class="fas fa-edit"></i>
											</a>
										{% endif %}
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="8" class="text-center">Aucun projet trouvé</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<style>
		.card {
			border-radius: 10px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			margin-bottom: 20px;
		}
		.badge {
			font-size: 0.85rem;
			padding: 5px 10px;
		}
	</style>
{% endblock %}


