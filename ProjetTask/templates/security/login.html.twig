{% extends 'base.html.twig' %}

{% block title %}
    Connexion
{% endblock %}

{% block extra_styles %}
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
{% endblock %}

{% block body %}
    <!-- Header avec logo et texte -->
    <div class="header-brand">
        <div class="logo">
            <img src="{{ asset('img/image.png') }}" alt="Logo Syntask">
        </div>
        <div class="brand-text">
            SYNTASK
        </div>
        <div class="system-title">
            SYSTÈME DE GESTION DE PROJET
        </div>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                {# Bouton retour si défini #}
                {% if referer is defined and referer is not empty %}
                    <div class="mb-3">
                        <a href="{{ referer }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i>
                            Retour
                        </a>
                    </div>
                {% endif %}

                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Connexion</h4>
                    </div>
                    <div class="card-body">
                        {# Gestion des erreurs de login #}
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        {# Affichage si utilisateur déjà connecté #}
                        {% if app.user %}
                            <div class="alert alert-info">
                                Vous êtes connecté en tant que {{ app.user.email|default('') }}.
                                <form action="{{ path('app_logout') }}" method="post" style="display:inline;">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                                    <button type="submit" class="btn btn-link">Déconnexion</button>
                                </form>
                            </div>
                        {% else %}
                            <form method="post">
                                <div class="mb-3">
                                    <label for="inputEmail" class="form-label">Email</label>
                                    <input type="email" value="{{ last_username|default('') }}" placeholder="Adresse mail..." name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                                </div>
                                <div class="mb-3">
                                    <label for="inputPassword" class="form-label">Mot de passe</label>
                                    <input type="password" placeholder="Mot de passe..." name="mdp" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                </div>
                                <div class="mb-3 text-end">
                                    <a href="{{ path('app_forgot_password_request') }}" class="btn btn-link p-0">Mot de passe oublié ?</a>
                                </div>
                                <input type="hidden" name="_token" value="{{ csrf_token('authenticate') }}">
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" name="_remember_me" id="remember_me">
                                    <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                                </div>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-primary" type="submit">Se connecter</button>
                                </div>
                            </form>
                        {% endif %}
                    </div>
                    <div class="card-footer text-center">
                        <p class="mb-0">
                            Vous n'avez pas de compte ?
                            <a href="{{ path('app_signup') }}">S'inscrire</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
