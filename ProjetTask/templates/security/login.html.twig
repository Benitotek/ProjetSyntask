{% extends 'base.html.twig' %}

{% block title %}Connexion - SYNTASK{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            height: 100vh;
            background: linear-gradient(135deg, #00bcd4 0%, #4dd0e1 100%);
            display: flex;
            flex-direction: column;
        }

        .header {
            background: rgba(255, 255, 255, 0.1);
            padding: 15px 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo-section {
            display: flex;
            align-items: center;
        }

        .logo {
            width: 40px;
            height: 40px;
            background: #333;
            margin-right: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 3px;
        }

        .logo::before {
            content: '';
            width: 20px;
            height: 20px;
            background: linear-gradient(45deg, #fff 0%, #ddd 100%);
            clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
        }

        .brand-name {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            letter-spacing: 1px;
        }

        .system-title {
            color: #ff9800;
            font-size: 18px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .main-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        .login-card {
            background: rgba(128, 128, 128, 0.9);
            border-radius: 15px;
            padding: 40px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
        }

        .login-title {
            text-align: center;
            font-size: 32px;
            font-weight: bold;
            color: #333;
            margin-bottom: 30px;
            letter-spacing: 2px;
        }

        .register-link {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
            font-size: 14px;
        }

        .register-link a {
            color: #00bcd4;
            text-decoration: none;
            font-weight: 500;
        }

        .register-link a:hover {
            text-decoration: underline;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: none;
            border-radius: 5px;
            background: rgba(255, 255, 255, 0.9);
            font-size: 14px;
            color: #333;
            outline: none;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 1);
            box-shadow: 0 0 10px rgba(0, 188, 212, 0.3);
        }

        .form-control::placeholder {
            color: #666;
        }

        .forgot-password {
            text-align: center;
            margin: 20px 0;
        }

        .forgot-password a {
            color: #333;
            text-decoration: none;
            font-size: 12px;
        }

        .forgot-password a:hover {
            text-decoration: underline;
        }

        .btn-login {
            width: 100%;
            padding: 12px;
            background: #333;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-login:hover {
            background: #555;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .alert {
            margin-bottom: 20px;
            padding: 10px 15px;
            border-radius: 5px;
            font-size: 14px;
        }

        .alert-danger {
            background: rgba(244, 67, 54, 0.1);
            border: 1px solid rgba(244, 67, 54, 0.3);
            color: #d32f2f;
        }

        .alert-success {
            background: rgba(76, 175, 80, 0.1);
            border: 1px solid rgba(76, 175, 80, 0.3);
            color: #388e3c;
        }

        @media (max-width: 768px) {
            .header {
                padding: 10px 20px;
            }
            
            .system-title {
                font-size: 14px;
            }
            
            .login-card {
                padding: 30px 20px;
                margin: 0 10px;
            }
            
            .login-title {
                font-size: 28px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="header">
        <div class="logo-section">
            <div class="logo"></div>
            <span class="brand-name">SYNTASK</span>
        </div>
        <div class="system-title">Système gérants les gestion de projet</div>
    </div>

    <div class="main-container">
        <div class="login-card">
            <h1 class="login-title">LOGIN</h1>
            
            <div class="register-link">
                Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">inscrivez</a> vous ici
            </div>

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger">{{ flash_error }}</div>
            {% endfor %}

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="alert alert-success">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <form method="post">
               

                <div class="form-group">
                    <input type="email" 
                           value="{{ last_username }}" 
                           name="email" 
                           id="inputEmail"
                           class="form-control" 
                           placeholder="EMAIL" 
                           autocomplete="email" 
                           required 
                           autofocus>
                </div>

                <div class="form-group">
                    <input type="password" 
                           name="password" 
                           id="inputPassword"
                           class="form-control" 
                           placeholder="Mot de Passe" 
                           autocomplete="current-password" 
                           required>
                </div>

                <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}">

                <div class="forgot-password">
                    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublier ?</a>
                </div>

                <button class="btn-login" type="submit">
                    Connexion
                </button>
            </form>
        </div>
    </div>
{% endblock %}