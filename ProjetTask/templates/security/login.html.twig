{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/login.js') }}"></script>
{% endblock %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="csrf-token" content="{{ csrf_token('app') }}">
        <title>{% block title %}ProjetSyntask{% endblock %}</title>
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}


{# {% block title %}Connexion - SYNTASK
{% endblock %} #}

{# {% block stylesheets %} #}
	{# {{ parent() }} #}
	
{# {% endblock %} #}

{% block body %}
	<div class="header">
		<div class="logo-section">
			<div class="logo"></div>
			<span class="brand-name">SYNTASK</span>
		</div>
		<div class="system-title">Système gérants les gestion de projet</div>
	</div>

	<div class="main-container">
		<div class="login-card">
			<h1 class="login-title">LOGIN</h1>

			<div class="register-link">
				Vous n'avez pas de compte ?
				<a href="{{ path('app_register') }}">inscrivez</a>
				vous ici
			</div>

			{% for flash_error in app.flashes('verify_email_error') %}
				<div class="alert alert-danger">{{ flash_error }}</div>
			{% endfor %}

			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="alert alert-success">
					Vous êtes connecté en tant que
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Se déconnecter</a>
				</div>
			{% endif %}

			<form method="post">


				<div class="form-group">
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="EMAIL" autocomplete="email" required autofocus>
				</div>

				<div class="form-group">
					<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de Passe" autocomplete="current-password" required>
				</div>
				<input type="hidden" name="_token" value="{{ csrf_token('authenticate') }}"/>
				<input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}">

				<div class="forgot-password">
					<a href="{{ path('app_forgot_password_request') }}">Mot de passe oublier ?</a>
				</div>

				<button class="btn-login" type="submit">
					Connexion
				</button>
			</form>
		</div>
	</div>
{% endblock %}
